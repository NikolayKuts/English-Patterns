<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/toolbar_icon_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/clip_board_icon_description"
        android:src="@drawable/ic_keyboard"
        android:tint="#7B6D6D6D"
        android:tintMode="src_in" />

    <Button
        android:id="@+id/russian_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_button"
        android:padding="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/ru"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/english_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_button"
        android:padding="8dp"
        android:text="@string/en"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/selected_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_button"
        android:padding="8dp"
        android:text="@string/selected"
        android:textColor="#FFFFFF" />
</LinearLayout>